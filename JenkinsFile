pipeline {
    agent any

    tools {
        nodejs "NodeJS" // The NodeJS config name from Jenkins Global Tool Config
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Minahil757575/Auction_Frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Dev Server') {
            steps {
                // Run Vite dev server in background on port 5173
                sh 'nohup npm run dev -- --host 0.0.0.0 > dev.log 2>&1 &'
            }
        }
    }
}
